@model TechStore.Models.Order

@* Checkout View *@

<h1>Thank you for order!</h1>

<h5 class="mt-5">Order Id: @Model.Id</h5>
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Technic</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                var itemTotal = item.Technics.Price * item.Quantity;
                <tr>
                    <td>
                        <a class="generally" asp-controller="Home" asp-action="Details" asp-route-id="@item.Id"></a><img src="@item.Technics.ImageUrl" style="height: 4em">
                    </td>
                    <td>
                        <a class="generally" asp-controller="Home" asp-action="Details" asp-route-id="@item.Id">@item.Technics.ModelName</a>
                    </td>
                    <td>
                        @itemTotal.ToString("c")
                    </td>
                    <td>
                        @item.Quantity
                    </td>
                </tr>
            }
        </tbody>

        <tfoot>
        <td></td>
        <td class="text-right"> <strong>Total: </strong> </td>
        <td>
            <strong>@Model?.OrderTotal.ToString("c")</strong>
        </td>
        <td></td>
        </tfoot>

    </table>


